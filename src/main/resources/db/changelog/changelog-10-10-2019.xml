<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="10-10-2019-1" author="Matej Lobb">
        <createTable tableName="applications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
            <column name="uid" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
            <column name="default_role_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="default_role_id" baseTableName="applications"
                                 constraintName="fk_applications_default_role_id" referencedColumnNames="role_id"
                                 referencedTableName="roles"/>

        <addColumn tableName="users">
            <column name="application_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseColumnNames="application_id" baseTableName="users"
                                 constraintName="fk_application_id_users_user" referencedColumnNames="id"
                                 referencedTableName="applications"/>

        <insert tableName="applications">
            <column name="name" value="test"/>
            <column name="uid" value="1s2a1x"/>
            <column name="default_role_id" valueNumeric="3"/>
        </insert>

        <sql>
            UPDATE users SET application_id = 1 where id = 1;
        </sql>
    </changeSet>
</databaseChangeLog>